<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ToggleButton
                        android:id="@+id/toggleStudyDayMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="studyDay"
                        android:textOn="Дневной режим 8:00 - 21:00"
                        android:textOff="Дневной режим 8:00 - 21:00"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleStudyNightMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="studyNight"
                        android:textOn="Ночной режим 21:00 - 8:00"
                        android:textOff="Ночной режим 21:00 - 8:00"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleStudyInflow5Mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="studyInflow5"
                        android:textOn="Приток 5 мин"
                        android:textOff="Приток 5 мин"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleStudyInflow10Mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="studyInflow10"
                        android:textOn="Приток 10 мин"
                        android:textOff="Приток 10 мин"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleStudyInflow20Mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="studyInflow20"
                        android:textOn="Приток 20 мин"
                        android:textOff="Приток 20 мин"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleStudyExhaust5Mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="studyExhaust5"
                        android:textOn="Вытяжка 5 мин"
                        android:textOff="Вытяжка 5 мин"
                        android:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ToggleButton
                        android:id="@+id/toggleBedroomDayMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="bedroomDay"
                        android:textOn="Дневной режим 8:00 - 21:00"
                        android:textOff="Дневной режим 8:00 - 21:00"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleBedroomNightMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="bedroomNight"
                        android:textOn="Ночной режим 21:00 - 8:00"
                        android:textOff="Ночной режим 21:00 - 8:00"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleBedroomInflow5Mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="bedroomInflow5"
                        android:textOn="Приток 5 мин"
                        android:textOff="Приток 5 мин"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleBedroomInflow10Mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="bedroomInflow10"
                        android:textOn="Приток 10 мин"
                        android:textOff="Приток 10 мин"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleBedroomInflow20Mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="bedroomInflow20"
                        android:textOn="Приток 20 мин"
                        android:textOff="Приток 20 мин"
                        android:visibility="visible"/>

                    <ToggleButton
                        android:id="@+id/toggleBedroomExhaust5Mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="bedroomExhaust5"
                        android:textOn="Вытяжка 5 мин"
                        android:textOff="Вытяжка 5 мин"
                        android:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <GridView
                        android:id="@+id/statusGrid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="90dp"
                        android:numColumns="2"
                        android:verticalSpacing="10dp"
                        android:horizontalSpacing="10dp"
                        android:stretchMode="columnWidth"
                        android:gravity="center"
                        android:visibility="visible">
                    </GridView>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>